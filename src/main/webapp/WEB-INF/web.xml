<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="springmvc" version="3.0">
  <display-name>SpringMVC</display-name>
  <welcome-file-list>
    <welcome-file>Login</welcome-file>
  </welcome-file-list>
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/mysqldb</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <listener>
    <listener-class>function.Initialization</listener-class>
  </listener>
  <context-param>
    <param-name>domain</param-name>
    <param-value>${app.domain}</param-value>
  </context-param>
  <context-param>
    <param-name>app.email</param-name>
    <param-value>${app.email}</param-value>
  </context-param>
  <context-param>
    <param-name>mail.smtp.server</param-name>
    <param-value>${mail.smtp.server}</param-value>
  </context-param>
  <context-param>
    <param-name>mail.smtp.username</param-name>
    <param-value>${mail.smtp.username}</param-value>
  </context-param>
  <context-param>
    <param-name>mail.smtp.password</param-name>
    <param-value>${mail.smtp.password}</param-value>
  </context-param>
  <context-param>
    <param-name>dbURL</param-name>
    <param-value>${db.url}</param-value>
  </context-param>
  <context-param>
    <param-name>dbUser</param-name>
    <param-value>${db.username}</param-value>
  </context-param>
  <context-param>
    <param-name>dbPass</param-name>
    <param-value>${db.password}</param-value>
  </context-param>
  <context-param>
  	<param-name>departmentList</param-name>
  	<param-value>Civil Engineering,Computer Science,Electrical and Computer Engineering,Mechanical Engineering,Technology</param-value>
  </context-param>
</web-app>